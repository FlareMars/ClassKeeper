<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="140dp"
        android:background="@android:color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建相册"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/tag_title"
            android:layout_marginBottom="20dp"
            />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tag_title"
            android:layout_centerHorizontal="true"
            android:id="@+id/et_create_album_new_name"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_little_title"
            android:layout_below="@id/tag_title"
            android:layout_toLeftOf="@id/et_create_album_new_name"
            android:layout_toStartOf="@id/et_create_album_new_name"
            android:text="新相册名称"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            />
        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:background="#44000000"
            android:layout_below="@+id/et_create_album_new_name"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_btn_send"
            android:text="确定创建新相册"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_below="@id/et_create_album_new_name"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/tv_btn_create_new_album"
            />
    </RelativeLayout>
</FrameLayout>