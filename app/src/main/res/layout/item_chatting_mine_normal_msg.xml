<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="end"
    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="14dp"
            android:paddingTop="12dp"
            android:background="@drawable/bg_chatting_box_mine_selector"
            android:id="@+id/tv_chatting_msg_mine_normal_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:maxWidth="250dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="æµ‹"
            />
        <ViewStub
            android:id="@+id/chatting_item_view_stub"
            android:layout="@layout/layout_one_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </FrameLayout>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/tag"
        android:layout_toEndOf="@id/tag"
        android:src="@mipmap/img_header2"
        android:id="@+id/iv_chatting_msg_mine_normal_header"
        />
</RelativeLayout>