<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#faf6f5"
    tools:context="com.flaremars.classmanagers.uis.CreateAnnouncementFragment"
    android:paddingTop="15dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公告大标题"
        android:id="@+id/label1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        />
    
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/label1"
        android:layout_toEndOf="@id/label1"
        android:id="@+id/et_create_announcement_title"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label1"
        android:layout_toLeftOf="@id/et_create_announcement_title"
        android:layout_toStartOf="@id/et_create_announcement_title"
        android:text="正文"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/label2"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="5"
        android:maxLines="8"
        android:background="@drawable/selector_announcement_content"
        android:id="@+id/et_create_announcement_content"
        android:layout_toRightOf="@id/label2"
        android:layout_toEndOf="@id/label2"
        android:layout_below="@id/label1"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="start|top"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_create_announcement_content"
        android:layout_toLeftOf="@id/et_create_announcement_title"
        android:layout_toStartOf="@id/et_create_announcement_title"
        android:text="有效至"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/label3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_create_announcement_deadline"
        android:layout_toRightOf="@id/label3"
        android:layout_toEndOf="@id/label3"
        android:layout_below="@id/et_create_announcement_content"
        android:layout_marginTop="15dp"
        android:text="2015-4-30"
        android:textColor="@color/font_color_blue"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_send"
        android:id="@+id/btn_create_announcement_confirm"
        android:text="发布"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/label3"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        />

</RelativeLayout>
