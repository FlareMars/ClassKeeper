<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/bg_base_btn"
    >

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/default_ic_contact"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/item_detail_contacts_img"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/item_detail_contacts_name"
        android:text="test"
        android:textSize="16sp"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/iv_btn_item_detail_contacts_action"
        android:layout_weight="1"
        android:src="@drawable/ic_detail_read"
        android:layout_gravity="center"
        android:padding="8dp"
        />
</LinearLayout>