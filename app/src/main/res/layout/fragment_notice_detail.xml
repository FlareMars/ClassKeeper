<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.flaremars.classmanagers.uis.NoticeDetailFragment"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今晚开大会啦"
        android:id="@+id/tv_notice_detail_content"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/font_color_blue"
        android:textSize="16sp"
        android:text="她的纯真熊"
        android:id="@+id/tv_notice_detail_name"
        android:gravity="end"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="15-3-30 20:29"
        android:gravity="end"
        android:textColor="@color/font_little_title"
        android:id="@+id/tv_notice_detail_time"
        />
</LinearLayout>
