<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_base_btn"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/temp_word"
            android:id="@+id/item_file_content_img"
            android:padding="5dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_file_name"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_file_size"
                android:textSize="12sp"
                android:textColor="@color/font_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/item_file_base_info"
                android:textColor="@color/font_color"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_download"
            android:layout_gravity="center"
            android:padding="16dp"
            android:id="@+id/item_file_download"
            />
    </LinearLayout>
    <com.flaremars.classmanagers.views.ProgressBarDeterminate
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_file_download_progress"
        android:background="#1E88E5"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="2dp"
        android:visibility="invisible"
        />
</LinearLayout>
