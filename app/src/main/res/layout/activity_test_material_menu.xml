<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_content"
        >

        <com.flaremars.classmanagers.views.ListViewCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_view"
            android:background="@android:color/white"
            android:listSelector="@android:color/transparent"
            >

        </com.flaremars.classmanagers.views.ListViewCompat>


    <LinearLayout
        android:id="@+id/main_ll_header"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:orientation="vertical"
        android:background="#e4e3e3"
        android:layout_marginTop="42dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="vertical"
            android:background="@drawable/midbar"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:id="@+id/header_view"
                android:orientation="horizontal"
                >
                <com.flaremars.classmanagers.views.RoundImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="65dp"
                    android:layout_marginStart="65dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pic_testimg"
                    android:id="@+id/iv_main_big_class_header"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/rl_main_class_info"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="计算机1301班 |"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"
                        android:id="@+id/tv_main_big_class_name"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="40人"
                        android:id="@+id/tv_main_class_people_count"
                        android:layout_toRightOf="@id/tv_main_big_class_name"
                        android:layout_toEndOf="@id/tv_main_big_class_name"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="武汉理工大学 | 计算机学院"
                        android:id="@+id/tv_main_class_base_locate"
                        android:textColor="#8dccf7"
                        android:layout_below="@id/tv_main_big_class_name"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/function_bar_contacts"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/selector_white_btn"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_people_white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人"
                        android:textColor="@android:color/white"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#888dccf7"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/function_bar_files"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/selector_white_btn"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_file_white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="文件"
                        android:textColor="@android:color/white"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#888dccf7"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/function_bar_albums"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/selector_white_btn"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_pic_white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="相册"
                        android:textColor="@android:color/white"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e4e2e3"
            android:layout_marginTop="-5dp"
            >
            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_vp_announcements"
                >

            </android.support.v4.view.ViewPager>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_tv_size_indicator"
                android:textSize="12sp"
                android:textColor="@color/font_little_title"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/new_font_announcement"
                android:gravity="center"
                android:textSize="22sp"
                android:background="@drawable/selector_gray_white_btn"
                android:id="@+id/tv_btn_send_announcement_when_none"
                android:text="点击发布公告"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_gravity="bottom"
                />
        </FrameLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_small_header_height"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="6dp"
            android:background="@color/main_color"
            android:id="@+id/main_ll_small_header"
            android:layout_marginTop="45dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/pic_testimg"
                android:id="@+id/iv_main_min_class_header"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计算机1301班"
                android:id="@+id/tv_main_min_class_name"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="15dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_header_height"

            android:orientation="horizontal"
            android:id="@+id/main_title"
            android:background="@drawable/topbar"
            >
            <!--
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon"
                />
            -->
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:src="@drawable/slider"
                android:background="@drawable/selector_white_btn"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:id="@+id/drawer_toggle"
                />
            <!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:text="班级管家"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                />
                -->
            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/no_reader_bg"
                android:id="@+id/iv_has_no_read"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/ic_search_white_24dp"
                    android:padding="6dp"
                    android:id="@+id/main_screen_search"
                    android:background="@drawable/selector_white_btn"
                    />

                </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#bbffffff"
                android:id="@+id/main_white_cover_floor"
                android:visibility="gone"
                />

            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="20dp"
                android:id="@+id/main_function_fb"
                app:fab_addButtonColorNormal="#008cee"
                app:fab_labelsPosition="left"
                app:fab_labelStyle="@style/menu_labels_style"
                />
        </FrameLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:dividerHeight="0dp"
        android:background="@drawable/drawer_bg_white"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <com.flaremars.classmanagers.views.RoundImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:layout_marginTop="70dp"
            android:id="@+id/drawer_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/font_little_title"
            android:text="管家小豪"
            android:id="@+id/tv_drawer_name"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="@dimen/drawer_item_width"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/selector_gray_btn"
                android:id="@+id/drawer_view_related_msg"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_drawer_msg_color"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="@dimen/drawer_padding"
                    android:layout_marginStart="@dimen/drawer_padding"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="关联消息"
                    android:textColor="#464545"
                />

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/no_reader_bg"
                    android:id="@+id/iv_has_no_read_drawer"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aacacacb"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/selector_gray_btn"
                android:id="@+id/drawer_view_file"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_drawer_download_color"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="@dimen/drawer_padding"
                    android:layout_marginStart="@dimen/drawer_padding"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="已下载"
                    android:textColor="#464545"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aacacacb"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/selector_gray_btn"
                android:id="@+id/drawer_view_add"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_drawer_add_color"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="@dimen/drawer_padding"
                    android:layout_marginStart="@dimen/drawer_padding"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="加入班级"
                    android:textColor="#464545"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aacacacb"
                />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/selector_gray_btn"
                android:gravity="center"
                android:id="@+id/drawer_view_setting"
                android:layout_gravity="bottom"
                android:layout_marginBottom="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/drawer_setting"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textColor="#464545"
                    />
            </LinearLayout>
            </FrameLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
