<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.github.ksoichiro.android.observablescrollview.ObservableListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_view"
            android:background="@android:color/white"
            >

        </com.github.ksoichiro.android.observablescrollview.ObservableListView>


    <LinearLayout
        android:id="@+id/main_ll_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_header_height"
        android:orientation="vertical"
        android:background="#3f51b5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/header_view"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_testimg"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计算机1301班 |"
                    android:textSize="25sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/main_tv_classname"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="40人"
                    android:layout_toRightOf="@id/main_tv_classname"
                    android:layout_toEndOf="@id/main_tv_classname"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="武汉理工大学 | 计算机学院"
                    android:textColor="#6f81e5"
                    android:layout_below="@id/main_tv_classname"
                    />
                </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_tran"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#e4e2e3"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#3f51b5"
                    android:textSize="20sp"
                    android:text="理工大本科生自主创新火热进行中"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周小强 1月13日 12:00"
                    android:textColor="#8b898a"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="根据教务处XXXX通知，请大家积极参加，把握机会锻炼技术"
                    android:lineSpacingMultiplier="1.2"
                    />
                </LinearLayout>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_contascts"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    />
                </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_file"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文件"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_pic"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="相册"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_fun"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="功能"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/shape_border" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_small_header_height"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="6dp"
            android:background="#3f51b5"
            android:id="@+id/main_ll_small_header"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/pic_testimg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计算机1301班"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="15dp"
                />
        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:dividerHeight="0dp"
        android:background="@drawable/drawer_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <com.flaremars.classmanagers.views.RoundImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pic_testimg"
            android:scaleType="fitXY"
            android:layout_marginTop="70dp"
            android:id="@+id/drawer_img"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:text="管家小豪"
            android:layout_marginTop="10dp"
            />
        <View
            android:layout_width="@dimen/drawer_item_width"
            android:layout_height="1dp"
            android:background="#5665c9"
            android:layout_marginTop="55dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            />
        <LinearLayout
            android:layout_width="@dimen/drawer_item_width"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#3f51b5"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_add_circle_outline_white_24dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="创建"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
        <View
            android:layout_width="@dimen/drawer_item_width"
            android:layout_height="1dp"
            android:background="#5665c9"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            />
        <LinearLayout
            android:layout_width="@dimen/drawer_item_width"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#3f51b5"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_stars_white_24dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="收藏"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
        <View
            android:layout_width="@dimen/drawer_item_width"
            android:layout_height="1dp"
            android:background="#5665c9"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            />
        <LinearLayout
            android:layout_width="@dimen/drawer_item_width"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#3f51b5"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_forum_white_24dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="关联"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
        <View
            android:layout_width="@dimen/drawer_item_width"
            android:layout_height="1dp"
            android:background="#5665c9"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
